        <idSize>8</idSize>
    </info>
    <blocks>
        <block name="c_end">
            <id>0x0</id>
            <type>c</type>
            <family>control</family>
        </block>
        <block name="motors_run_direction">
            <id>0xD</id>
            <type>stack</type>
            <family>motors</family>
            <arguments>
                <port size="2" type="enum">
                    <enum value="0">A</enum>
                    <enum value="1">B</enum>
                    <enum value="2">C</enum>
                    <enum value="3">D</enum>
                </port>
                <direction size="1" type="enum">
                    <enum value="0">clockwise</enum> <!-- right -->
                    <enum value="1">counterclockwise</enum> <!-- left -->
                </direction>
                <unit size="2" type="enum">
                    <enum value="0">rotations</enum>
                    <enum value="1">degrees</enum>
                    <enum value="2">seconds</enum>
                </unit>
                <value size="8" type="uint"/>  <!-- 0 ... 255 -->
            </arguments>
        </block>
        <block name="motors_start_speed">
            <id>0xE</id>
            <type>stack</type>
            <family>motors</family>
            <arguments>
                <port size="2" type="enum">
                    <enum value="0">A</enum>
                    <enum value="1">B</enum>
                    <enum value="2">C</enum>
                    <enum value="3">D</enum>
                </port>
                <direction size="1" type="enum">
                    <enum value="0">clockwise</enum> <!-- right -->
                    <enum value="1">counterclockwise</enum> <!-- left -->
                </direction>
                <!-- 0 ... 100 -->
                <speed size="7" type="uint"/>
            </arguments>
        </block>

        <block name="motors_stop">
            <id>0xF</id>
            <type>stack</type>
            <family>motors</family>
            <arguments>
                <port size="2" type="enum">
                    <enum value="0">A</enum>
                    <enum value="1">B</enum>
                    <enum value="2">C</enum>
                    <enum value="3">D</enum>
                </port>
            </arguments>
        </block>
        <block name="h_on_start">
            <id>0x2E</id>
            <type>hat</type>
            <family>events</family>
        </block>
        <block name="set_status_light">
            <id>0x16</id>
            <type>stack</type>
            <family>display</family>
            <arguments>
                <color size="3" type="enum">
                    <enum value="0">BLACK</enum>
                    <enum value="1">GREEN</enum>
                    <enum value="2">RED</enum>
                    <enum value="3">ORANGE</enum>
                    <!-- /!\ Pulse not implemented  -->
                    <enum value="4">GREEN_PULSE</enum>
                    <enum value="5">RED_PULSE</enum>
                    <enum value="6">ORANGE_PULSE</enum>
                </color>
            </arguments>
        </block>
        <block name="wait_seconds">
            <id>0x1F</id>
            <type>stack</type>
            <family>control</family>
            <arguments>
                <seconds size="8" type="uint"/>
            </arguments>
        </block>
        <block name="wait_touch">
            <id>0x20</id>
            <type>stack</type>
            <family>sensors</family>
            <arguments>
                <port size="2" type="enum">
                    <enum value="0">1</enum>
                    <enum value="1">2</enum>
                    <enum value="2">3</enum>
                    <enum value="3">4</enum>
                </port>
                <state size="1" type="enum">
                    <enum value="0">pressed</enum>
                    <enum value="1">release</enum>
                </state>
            </arguments>
        </block>
        <block name="c_forever">
            <id>0x38</id>
            <type>c</type>
            <family>control</family>
        </block>
        <block name="c_repeat">
            <id>0x3B</id>
            <type>c</type>
            <family>control</family>
            <arguments>
                <times size="8" type="uint"/>
            </arguments>
        </block>
        <block name="c_if">
            <id>0x39</id>
            <type>c</type>
            <family>control</family>
            <arguments>
                <boolean type="binary"/>
            </arguments>
        </block>
        <block name="c_else">
            <id>0x7F</id>
            <type>c</type>
            <family>control</family>
        </block>
    </blocks>

