                    <enum value="A">A</enum>
                    <enum value="B">B</enum>
                    <enum value="C">C</enum>
                    <enum value="D">D</enum>
                </port>
                <direction size="1" type="enum">
                    <enum value="r">clockwise</enum> <!-- right -->
                    <enum value="l">counterclockwise</enum> <!-- left -->
                </direction>
